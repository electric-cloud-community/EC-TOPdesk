<editor>
    <formElement>
        <type>entry</type>
        <label>Configuration:</label>
        <property>config</property>
        <required>1</required>
        <documentation>Unique name for the plugin configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Description:</label>
        <property>desc</property>
        <required>0</required>
        <documentation>Description for the plugin configuration.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Instance:</label>
        <property>instance</property>
        <required>1</required>
        <documentation>Instance URL to connect to</documentation>
    </formElement>
    <formElement>
        <type>credential</type>
        <label>Credential:</label>
        <property>credential</property>
        <required>1</required>
        <documentation>Credentials to connect</documentation>
        <attachedAsParameterToStep>createAndAttachCredential</attachedAsParameterToStep>
    </formElement>
   <formElement>
      <type>select</type>
      <label>Log Level:</label>
      <property>debugLevel</property>
      <required>0</required>
      <value>0</value>
      <option><value>0</value><name>Info</name></option>
      <option><value>1</value><name>Debug</name></option>
      <option><value>2</value><name>Trace</name></option>
      <documentation>This option sets debug level for logs. If info is selected,
        only summary infornation will be show, for debug, there will be some
        debug information and for trace the whole requests and responses will
        be shown.</documentation>
    </formElement>
    <formElement>
      <type>checkbox</type>
      <required>0</required>
      <label>Check Connection?:</label>
      <checkedValue>1</checkedValue>
      <uncheckedValue>0</uncheckedValue>
      <property>checkConnection</property>
      <documentation>If checked, the credentials will be checked before the configuration is saved.</documentation>
      <value>1</value>
      </formElement>
 </editor>
